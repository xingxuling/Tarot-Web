{
  "expo": {
    "name": "塔罗占卜助手",
    "slug": "tarot-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tarotassistant",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#1e1b4b",
    "primaryColor": "#9333ea",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e1b4b"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "YOUR_IOS_BUNDLE_IDENTIFIER",
      "buildNumber": "1.0.0",
      "config": {
        "googleMobileAdsAppId": "YOUR_IOS_ADMOB_APP_ID"
      },
      "infoPlist": {
        "NSUserTrackingUsageDescription": "此应用使用广告标识符来提供个性化广告体验。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1e1b4b"
      },
      "package": "YOUR_ANDROID_PACKAGE_NAME",
      "versionCode": 1,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "config": {
        "googleMobileAdsAppId": "YOUR_ANDROID_ADMOB_APP_ID"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-ads-admob",
        {
          "userTrackingPermission": "此应用使用广告标识符来提供个性化广告体验。"
        }
      ]
    ]
  }
}
